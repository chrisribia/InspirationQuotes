<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/quote"
            android:scaleType="center"
            />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:hint="When's the last time someone said that to you? In the daily grind, you might not always receive words of motivation from your managers because they get pushed to the wayside as calls and meetings pile up."
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    />

            </LinearLayout>
    </LinearLayout>

</LinearLayout>